block vars
<!DOCTYPE html>
html(lang="ja")
  head
    - var website_name = "wedding-party-firebase-form"
    - var meta_title_merge = website_name
    - var meta_keywords_merge = meta_keywords
    - var meta_description_merge = meta_description + ""
    - var meta_path_merge = meta_path;
    - var meta_ogp_title = ""
    - var meta_ogp_description = ""
    - var meta_ogp_type = "article"
    - var meta_ogp_img_merge = ""
    - var google_map_api_key = "YOUR_GOOGLE_MAP_API_KEY"

    if (meta_title != "")
      - meta_title_merge = meta_title + " | " + website_name;

    - meta_keywords_merge = "";

    if (meta_path == "/")
      - meta_ogp_type = 'website';

    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    title=meta_title_merge
    meta(name="description", content=meta_description_merge)
    meta(name="keywords", content=meta_keywords_merge)
    meta(property="og:title", content=meta_title_merge)
    meta(property="og:site_name", content=website_name)
    meta(property="og:type", content=meta_ogp_type)
    meta(property="og:description", content=meta_description_merge)
    meta(property="og:url", content=meta_path)
    meta(property="og:image", content=meta_ogp_img_merge)
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:site", content="@")
    meta(name="twitter:title", content=meta_title_merge)
    meta(name="twitter:description", content=meta_description_merge)
    meta(name="twitter:image", content=meta_ogp_img_merge)
    link(rel="shortcut icon" href="/assets/images/common/favicon.ico")
    link(rel="apple-touch-icon" href="/assets/images/common/app_icon.png")
    link(rel="stylesheet", href="/assets/css/style.css")
  body(class=body_class)
    block content
    script(src="https://maps.googleapis.com/maps/api/js?key=" + google_map_api_key)
    script(src="/assets/js/main.js")